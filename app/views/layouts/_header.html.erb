<nav class="navbar navbar-light sticky-top" style="background-color:#fff;">
  <% if user_signed_in? %>
    <a class="navbar-brand" href="/posts">
      <span><i class="fab fa-instagram"></i></span>
      <span>|</span>
      <span><%= image_tag("instagram-new-logo.png", style: "height: 60px") %></span>
    </a>
  <% else %>
    <a class="navbar-brand" href="/">
      <span><i class="fab fa-instagram"></i></span>
      <span>|</span>
      <span><%= image_tag("instagram-new-logo.png", style: "height: 60px") %></span>
    </a>
  <% end %>

  <% if user_signed_in? %>
    <!-- 検索機能未実装 -->
    <div class="search-form text-center">
      <% if current_page?(posts_path) %>
        <%= form_tag(posts_path, method: :get, class: "form-inline") do %>
          <%= text_field_tag :search, '', class: "form-control", placeholder: "Search" %>
          <%= submit_tag 'Search', name: nil, class: "btn btn-outline-secondary m-2 my-sm-0" %>
        <% end %>
      <% elsif current_page?(users_path) %>
        <%= form_tag(users_path, method: :get, class: "form-inline") do %>
          <%= text_field_tag :search, '', class: "form-control mr-sm-2", placeholder: "Search" %>
          <%= submit_tag 'Search', name: nil, class: "btn btn-outline-secondary m-2 my-sm-0" %>
        <% end %>
      <% else %>
      <% end %>
    </div>
    <ul class="navbar-nav">
      <li class="nav-item dropdown">
        <%= link_to("#", id: "navbarDropdownMenuLink", class: "nav-link dropdown-toggle", "data-toggle": "dropdown", "data-flip": "true", "aria-haspopup": "false", "aria-expanded": "false") do %>
          <%= image_tag current_user.avatar.url, class: "rounded-circle", style: "width: 50px;" %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink" style="position: absolute;right: 0;left: auto;">
          <%= link_to "Explore", "#", class: "dropdown-item" %>
          <%= link_to "Notifications", "#", class: "dropdown-item" %>
          <%= link_to "Your Account", user_path(current_user), class: "dropdown-item" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
    </ul>
  <% end %>
