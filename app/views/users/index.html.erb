<% provide(:title, 'Users') %>
<div class="container">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-3 my-2">
       <div class="card">
         <div class="card-body text-center">
           <p>
              <%= link_to user_path(user) do %>
                <%= image_tag(user.avatar.thumb, class: "rounded-circle") %>
              <% end %>
            </p>
           <p><%= user.username %></p>
           <!-- follow/unfollowボタン設置 -->
         </div>
       </div>
      </div>
    <% end %>
  </div>
</div>
