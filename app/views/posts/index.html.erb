<%= provide(:title, 'Posts') %>

<div class="container">
  <div class="row">
    <%= link_to 'New Post', new_post_path, class: "btn btn-success" %>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4">
        <%= render post %>
      </div>
    <% end %>
  </div>
</div>
